# ============================================================================
# NAINITAL TAXI - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================================
# Get these from: Supabase Dashboard → Project Settings → API
# URL format: https://[project-ref].supabase.co

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (Server-side only - for admin operations)
# WARNING: Never expose this in client-side code!
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here


# ============================================================================
# ADMIN AUTHENTICATION (Required)
# ============================================================================
# IMPORTANT: DO NOT use NEXT_PUBLIC_ prefix for passwords!
# This keeps the password server-side only for security

ADMIN_PASSWORD=change_this_to_a_strong_password


# ============================================================================
# EMAIL NOTIFICATIONS (Required for bookings)
# ============================================================================
# Resend API - Get free key from https://resend.com
# Free tier: 3,000 emails/month, 100 emails/day

RESEND_API_KEY=re_your_resend_api_key_here

# Email addresses
# Note: Domain must be verified in Resend (or use resend.dev for testing)
FROM_EMAIL=bookings@nainitaltaxi.in
ADMIN_EMAIL=admin@nainitaltaxi.in


# ============================================================================
# CONTACT FORM (Required)
# ============================================================================
# Web3Forms - Get free key from https://web3forms.com
# Free tier: Unlimited emails

NEXT_PUBLIC_WEB3FORMS_KEY=your_web3forms_access_key_here


# ============================================================================
# SITE CONFIGURATION (Required)
# ============================================================================
# Your website URL (no trailing slash)
# Development: http://localhost:3000
# Production: https://nainitaltaxi.in

NEXT_PUBLIC_SITE_URL=http://localhost:3000


# ============================================================================
# BUSINESS INFORMATION (Public)
# ============================================================================
# These are safe to be NEXT_PUBLIC_ as they're public information

NEXT_PUBLIC_BUSINESS_PHONE=+918445206116
NEXT_PUBLIC_BUSINESS_WHATSAPP=+918445206116
NEXT_PUBLIC_BUSINESS_EMAIL=taxinainital@gmail.com
NEXT_PUBLIC_UPI_ID=gokumaon@paytm


# ============================================================================
# GOOGLE CALENDAR SYNC (Optional)
# ============================================================================
# Required for automatic calendar synchronization
# Get credentials from: https://console.cloud.google.com

GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-client-secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your-refresh-token
GOOGLE_CALENDAR_ID=primary


# ============================================================================
# PAYMENT GATEWAY (Optional - for future integration)
# ============================================================================
# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# PhonePe
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_SALT_INDEX=1


# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=your_pixel_id

# Microsoft Clarity (Free heatmaps)
NEXT_PUBLIC_CLARITY_ID=your_clarity_id


# ============================================================================
# ERROR MONITORING (Optional but recommended)
# ============================================================================
# Sentry - Get from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id


# ============================================================================
# WHATSAPP BUSINESS API (Optional - for automation)
# ============================================================================
# Required for automated WhatsApp notifications
# Get from WhatsApp Business Platform

WHATSAPP_BUSINESS_PHONE_ID=your_phone_number_id
WHATSAPP_BUSINESS_TOKEN=your_permanent_token


# ============================================================================
# GOOGLE MAPS (Optional)
# ============================================================================
# For dynamic maps (if not using embed URLs)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_maps_api_key


# ============================================================================
# IMAGE STORAGE (Optional)
# ============================================================================
# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

